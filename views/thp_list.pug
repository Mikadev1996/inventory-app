extends layout

block content
    nav
        div.nav-content
            div.nav-text
                p BAT Portfolio
        div.nav-links
            a(href='/')
                p Home


    main.content
        div.list-page-container
            div
                h1.content-heading THP Portfolio
                p.content-text.content-description Tobacco heating products (THPs) are devices that heat tobacco to generate a nicotine-containing aerosol with a tobacco taste which the user inhales.
                p.content-text.content-description Because the tobacco is only heated and not burned, the resulting aerosol can potentially contain substantially lower levels of the toxicants found in the smoke produced when tobacco is burned. This provides one indication that THPs have potential reduced-risk properties compared with conventional cigarettes.


            div.list-display
                div.list-item
                    div.list-item-info
                        strong.info-text Name:
                        p.info-text Glo Pro (Express)
                    div.list-item-info
                        strong.info-text Release Date:
                        p.info-text 2017
                    div.list-item-info
                        strong.info-text Number of Devices:
                        p.info-text 3,000,000
                    div.list-item-info
                        strong.info-text Consumable Type:
                        p.info-text Demislim
                    img.device-image(src='../images/pro.png')
                div.list-item
                    div.list-item-info
                        strong.info-text Name:
                        p.info-text Glo Hyper (Lantern)
                    div.list-item-info
                        strong.info-text Release Date:
                        p.info-text 2017
                    div.list-item-info
                        strong.info-text Number of Devices:
                        p.info-text 3,000,000
                    div.list-item-info
                        strong.info-text Consumable Type:
                        p.info-text Superslim
                    img.device-image(src='../images/hyper.png')
                div.list-item
                    div.list-item-info
                        strong.info-text Name:
                        p.info-text Glo Hyper Plus (Trinity)
                    div.list-item-info
                        strong.info-text Release Date:
                        p.info-text 2017
                    div.list-item-info
                        strong.info-text Number of Devices:
                        p.info-text 3,000,000
                    div.list-item-info
                        strong.info-text Consumable Type:
                        p.info-text Superslim
                    img.device-image(src='../images/hyper_plus.png')
                each item in thp_list
                    div.list-item.custom-list-item
                        a(href=item.url)
                            div.list-item-info
                                strong.info-text Name:
                                p.info-text #{item.name}
                            div.list-item-info
                                strong.info-text Release Date:
                                p.info-text #{item.release_date}
                            div.list-item-info
                                strong.info-text Number of Devices:
                                p.info-text #{item.number_in_stock}
                            div.list-item-info
                                strong.info-text Consumable Type:
                                p.info-text #{item.consumable}
                            div.device-image-null

            div
                a(href='/category/thp/create')
                    p.text-button#thp-create Add your own device to this list!
    footer
        div.footer-content
            p Copyright Â© 2022, GitHub // Mika.dev
        div.footer-border
