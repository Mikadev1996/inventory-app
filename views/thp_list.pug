extends layout

block content
    nav
        div.nav-content
            div.nav-text
                p BAT Portfolio
        div.nav-links
            a(href='/')
                p Home


    main.content
        div.list-page-container
            div.list-display
                each item in thp_list
                    div.list-item
                        a(href=item.url)
                            p.content-text #{item.name}
                            p.content-text #{item.release_date}
                            p.content-text #{item.number_in_stock}
                            p.content-text #{item.consumable}
                            p.content-text #{item.img_ref}

            div
                a(href='/category/thp/create')
                    p.text-button#thp-create Add your own device to this list!
    footer
        div.footer-content
            p Copyright Â© 2022, GitHub // Mika.dev
        div.footer-border
